print(" PYRAMID WITHOUT USING THE LOOP ")
name = "Happy"

#normal
print("STRAIGHT ORDER PYRAMID")
print(name[0])
print(name[0:2])
print(name[0:3])
print(name[0:4])
print(name[0:5])

#reverse
print(" REVERSE ORDER PYRAMID ")
print(name[-1])
print(name[-2:])
print(name[-3:])
print(name[-4:])
print(name[-5:9])
